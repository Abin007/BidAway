
<article class="new-post">
  <h1>User Login</h1>
  <form action="/users" method="GET" class="new-post-form">
        <button type="submit">Sign Up as a new user?</button>
  </form>
  <form action="/users/userlogin" method="POST" class="new-post-form">
    <label>
      Username:
      <input type="text" name="username" placeholder="" value="{{userinfo.username}}" class="full-width-input"/>
    </label>
      Password:
      <input type="password" name="password" placeholder="" value="{{userinfo.password}}" class="full-width-input"/>
    </label>

 
    <button type="submit">Login</button>
    <button type="reset">Clear Form</button>
    
  </form>
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
</article>