<main>
<div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Hello, {{ user.username }} !</h1>
      <p><a class="btn btn-primary btn-lg" href="/users/edituser" role="button">edit info </a></p>
     
    </div>
</div>
<div class="container">
    <!-- Example row of columns -->

    <div class="row">
      <div class="col-md-4">
        <h2>Email ID</h2>
        <p>{{ user.emailid}}</p> 
      </div>
      <div class="col-md-4">
        <h2>Mobile Number</h2>
        <p>{{ user.phone_num}}</p>
      
      </div>
      <div class="col-md-4">
        <h2>Date of Birth</h2>
        <p>{{ user.DOB }}</p>
 
      </div>
    </div>

    <hr>

  </div> 
  <div class="container">
    <!-- Example row of columns -->
    <h1> Items Sold</h1>
    <div class="row">
      {{#each user.items_sold}}
      <div class="col-md-4">
            <div class="list-group">
                  <a class="btn btn-primary btn-sm" href="/item/{{this.id}}">{{this.name}}</a>
            </div>
        
   
      </div>
      {{/each}}
    </div>

    <hr>

  </div>
  <div class="container">
    <!-- Example row of columns -->
    <h1> Items Won</h1>
    <div class="row">
      {{#each user.items_won}}
      <div class="col-md-4">
            <div class="list-group">
                  <a class="btn btn-primary btn-sm" href="/item/{{this.id}}">{{this.name}}</a>
            </div>
        
   
      </div>
      {{/each}}
    </div>

    <hr>

  </div>
</main>

